<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/item_vertical_padding"
        android:paddingBottom="@dimen/item_vertical_padding"
        android:paddingLeft="@dimen/item_vertical_padding"
        android:paddingRight="@dimen/item_vertical_padding">

        <ImageView
            android:id="@+id/item_small_image"
            android:layout_width="@dimen/small_image"
            android:layout_height="@dimen/small_image"
            android:scaleType="centerCrop"
            android:contentDescription="@string/content_description" />
    
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingTop="@dimen/padding_top"
            android:textSize="@dimen/name_size"
            android:layout_alignTop="@+id/item_small_image"
            android:layout_toRightOf="@+id/item_small_image"
            android:layout_toEndOf="@+id/item_small_image" />

        <TextView
            android:id="@+id/item_genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:textColor="@color/grayText"
            android:textSize="@dimen/usually_size"
            android:layout_below="@+id/item_name"
            android:layout_toRightOf="@+id/item_small_image"
            android:layout_toEndOf="@+id/item_small_image" />


        <TextView
            android:id="@+id/item_albums_and_tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:textColor="@color/grayText"
            android:textSize="@dimen/usually_size"
            android:layout_alignBottom="@+id/item_small_image"
            android:layout_toRightOf="@+id/item_small_image"
            android:layout_toEndOf="@+id/item_small_image" />

    </RelativeLayout>